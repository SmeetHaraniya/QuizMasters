@model List<QuizApplicationMVC.Models.QuizUserHistory>

@{
    ViewData["Title"] = "Quiz History";
}

<style>
    h1{
        font-weight: bolder;
    }
</style>

<div class="container mt-5">
    <h1 class=" mb-4">Quiz History</h1>
    <hr />

    @if (Model.Count == 0)
    {
        <p class="text-center">No quiz history available.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Quiz Title</th>
                        <th>Score</th>
                        <th>Date-Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var quizUser in Model)
                    {
                        <tr>
                            <td>@quizUser.Quiz.Title</td>
                            <td>@quizUser.Score / @quizUser.Quiz.Questions.Count</td>
                            <td>@quizUser.DateTaken.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
