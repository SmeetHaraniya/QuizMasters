@model QuizApplicationMVC.Models.Users

@{
    ViewData["Title"] = "Details";
}

<style>
    .btn-primary {
        background-color: rgba(17, 17, 17, 0.6);
        border-color: black;
    }

    .btn-primary:hover {
        background-color: rgba(17, 17, 17, 0.8);
        border-color: white;
    }
</style>
<h1>User Details</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    : @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    : @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="mt-3">
                <a asp-controller="Quiz" asp-action="MyQuizes" class="btn btn-primary">My Quizes</a>
                <span class="mx-2"></span> <!-- Add spacing between buttons -->
                <a asp-controller="Users" asp-action="QuizHistory" class="btn btn-primary">History</a>
                <span class="mx-2"></span> <!-- Add spacing between buttons -->
                <a asp-controller="Users" asp-action="Edit" asp-route-id="@Context.Request.HttpContext.Session.GetInt32("Id")" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>
