@model QuizApplicationMVC.Models.Questions

@{
    ViewData["Title"] = "Edit";
}

<style>
    .btn {
        background-color: rgba(17, 17, 17, 0.6);
        border-color: black;
        color: white;
    }

    .btn:hover {
        background-color: rgba(17, 17, 17, 0.8);
        border-color: white;
        color: white;
    }
</style>

<div class="container row mt-4 p-0">
    <h1>Edit Question</h1>
    <hr />
    <div class="col-md-4">
        <form asp-controller="Quiz" asp-action="MyQuizes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="QuestionsName" class="control-label"></label>
                <input asp-for="QuestionsName" class="form-control" />
                <span asp-validation-for="QuestionsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionA" class="control-label"></label>
                <input asp-for="OptionA" class="form-control" />
                <span asp-validation-for="OptionA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionB" class="control-label"></label>
                <input asp-for="OptionB" class="form-control" />
                <span asp-validation-for="OptionB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionC" class="control-label"></label>
                <input asp-for="OptionC" class="form-control" />
                <span asp-validation-for="OptionC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionD" class="control-label"></label>
                <input asp-for="OptionD" class="form-control" />
                <span asp-validation-for="OptionD" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CorrectOption" class="control-label">Correct Option</label>
                <select asp-for="CorrectOption" class="form-control">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
                <span asp-validation-for="CorrectOption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
                <a asp-controller="Quiz" asp-action="MyQuizes" class="btn">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
