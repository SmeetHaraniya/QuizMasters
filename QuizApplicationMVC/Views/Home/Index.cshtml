@{
    ViewData["Title"] = "Welcome to QuizzoGenius";
}

<div class="welcome-container">
    <div class="content-box">
        <h1 class="main-title">Welcome to QuizMaster</h1>
        <p class="lead-text">Become a Quiz Master with our interactive quiz platform.</p>
        <p class="sub-text">Explore, learn, and have fun while testing your knowledge!</p>
        <a href="/Quiz/Index" class="cta-button">
            Get Started
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="arrow-icon">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
