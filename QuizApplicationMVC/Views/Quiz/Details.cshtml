@model QuizApplicationMVC.Models.Quiz

@{
    ViewData["Title"] = "Details";
}

<style>
    .btn{
        background-color: rgba(17, 17, 17, 0.6);
        border-color: black;
        color:white;
    }

    .btn:hover{
        background-color: rgba(17, 17, 17, 0.8);
        border-color: white;
        color:white;
    }
</style>

<div class="container mt-4 p-0">
    <h1>Quiz Details</h1>
    <hr />

    <div class="row mt-2">
        <div class="col-md-8">

            <dl class="row">
                <dt class="col-sm-2">Title</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-2">Added by </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.User.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <a asp-action="Index" class="btn">Back to List</a>
        </div>
    </div>
</div>
